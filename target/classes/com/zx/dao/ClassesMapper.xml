<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zx.dao.ClassesMapper">

	<resultMap id="classesMap" type="Classes">
		<collection property="users" javaType="User" select="findUserByClassesId"
			column="id" ofType="User"></collection>
	</resultMap>

	<!-- 根据ID查询classes对象 -->
	<select id="findById" parameterType="Long" resultMap="classesMap">
		select *
		from classes
		where
		id = #{id}
	</select>

	<!-- 查询所有的classes对象 -->
	<select id="findAll" resultMap="classesMap">
		select * from classes c
	</select>
	<!-- 查询user对象 -->
	<select id="findUserByClassesId" resultType="User"
		parameterType="int">
		select * from user
		where classes_id=#{id}
	</select>
	<!-- 添加数据 -->
	<insert id="insert" useGeneratedKeys="true" keyProperty="id"
		keyColumn="id" parameterType="Map">
		insert into classes(name) values(#{name})
	</insert>
</mapper>